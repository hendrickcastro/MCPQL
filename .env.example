# Azure SQL Server Configuration
DB_AUTHENTICATION_TYPE="sql"
DB_SERVER="myservername"
DB_NAME="dbname"
DB_USER="username"
DB_PASSWORD="password"
DB_TIMEOUT=30000
DB_PORT=1433
DB_TRUST_SERVER_CERTIFICATE="yes"
DB_ENCRYPT=true

# Security Configuration (IMPORTANT: Keep false in production)
# Controls whether INSERT, UPDATE, DELETE, ALTER, DROP, CREATE operations are allowed
DB_ALLOW_MODIFICATIONS=false

# Controls whether stored procedure execution is allowed
DB_ALLOW_STORED_PROCEDURES=false