{
  "name": "mcpql",
  "version": "1.0.0",
  "description": "MCPQL - SQL Server MCP Server for database analysis and operations",
  "type": "module",
  "main": "dist/server.js",
  "bin": {
    "mcpql": "./dist/server.js"
  },
  "files": [
    "dist/**/*",
    "src/**/*",
    "tsconfig.json",
    "README.md",
    "LICENSE"
